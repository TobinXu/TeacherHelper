/* page_body */
  .page_body{
    width: 100%;
    background-color: #fff;
  }
  /* bar */
    .bar{
      margin-top: 10px;
      height: 30px;
    }
      .btn{
        float: left;
        height: 100%;
        margin-top: 10px;
        margin-left: 30px;
        font-size: 14px;
        line-height: 30px;
        text-align: center;
      }
      .btn-active{
        font-weight: 900;
        font-size: 16px;
        border-bottom: 2px #0e932e solid;
        padding-bottom: 4px;
      }
      
      /*  课程 */
      .course{
        height: 100px;
        width: 80%;
        margin: 25px auto 0 auto;
        /* background-color: #0e932e; */
        background-color: rgb(140, 174, 133);
        box-shadow: 2px 2px 2px #AAAAAA;
        border-radius: 4px;
        color: white;
        position: relative;
      }
        .c-arrow{
          position: absolute;
          top: 40%;
          right: 10px;
          height: 25px;
          width: 25px;
        }
        .clip{
          position: absolute;
          top: -15px;
          left: -15px;
          height: 40px;
          width: 40px;
        }
        .cName{
          height: 30px;
          line-height: 30px;
          font-size: 16px;
          padding-left: 20px;
        }
        .cInfo{
          height: 78px;
          width: 50%;
          border-top: 2px white solid;
          padding: 10px 0 20px 20px;
          font-size: 14px;
        }
          .cNum{
            
          }
          .cMajor{
            float: left;
            overflow: hidden;
            width: 90px;
            height: 20px;
          }
            .cMajImg{
              padding-top: 2px;
              padding-right: 1px;
              height: 18px;
              width: 18px;
              float: right;
            }
            .cPeople{
              float: right
            }

