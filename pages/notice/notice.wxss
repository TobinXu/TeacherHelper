/* pages/notice/notice.wxss */

.page {
  background-color: whitesmoke;
  height: 100%;
}
.blank{
  height: 10px;
}
/* private-news */
.private-news{
  margin-bottom: 10px;
  height: 100px;
  width: 100%;
  position: relative;
  background-color: #fff;
}
  .padding{
    padding: 25px 15px;
  }
    .icon-envelope{
      height: 54px;
      width: 54px;
      float: left;
      text-align: center;
    }
      .icon-envelope image{
        height: 54px;
        width: 54px;
      }
    .content{
      float: left;
      padding-left: 20px;
      
    }
      .con-head{
        font-size: 16px;
        padding-top: 5px;
        font-weight: 900;
      }
      .con-body{
        font-size: 14px;
        color: #868585; 
        
      }

    .arrow{
      height: 25px;
      width: 25px;
      position: absolute;
      right: 15px;
      top: 37px;
    }
  
  /* notice-list */
  .notice-list{
    

  }
    .list-head{
      line-height: 40px;
      font-size: 14px;
      color: #868686;
      padding-left: 15px;
      background-color: white;
      margin-bottom: 1px;
    }
    .list-body{

    }
      .notice-card{
        padding: 10px 10px 0 10px;
        background-color: #fff;
      }
      .clearfix::after{
        content: " ";
        clear: both;
        height: 0px;
        display: block;
      }   
        .notice-icon-box{
          width: 18%;
          float: left;
        }
          .notice-icon{
            height: 64px;
            width: 64px;
          }
        .notice-content{
          width: 82%;
          float: left;
          border-bottom: 1px  #eaeaea solid;
          box-sizing: border-box;
        }
          .cName{
            font-size: 16px;
          }
          .cContent{
            font-size: 14px;
            padding-left: 5px;
            color: #868585;
            
          }
          .cTime{
            font-size: 12px;
            padding-left: 5px;
            padding-bottom: 10px;
            color: #aaaaaa;
          }