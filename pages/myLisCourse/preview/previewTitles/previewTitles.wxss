.pre-title-box{
  height: 100px;
  width: 100%;
  border-bottom: 1px solid #BBBBBB;
  position: relative
}
  .pre-title-card{
    position: relative;
    top: 20px;
    width: 90%;
    height: 50px;
    margin: 0 auto 0 auto;
    background-color: #8CAE85;
    color: #fff;
    font-size: 16px;
    line-height: 50px;
    padding-left: 15px;
  }
    .arrow{
      height: 24px;
      width: 24px;
      position: absolute;
      top: 13px;
      right: 13px;
    }
  .time{
    float: right;
    margin-right: 4%;
    font-size: 12px;
    margin-top: 23px;
    color: #868585;
  }