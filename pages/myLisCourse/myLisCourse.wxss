/* pages/detail/detail.wxss */
.page{
  position: relative;
}

/* top-bar */
.top-bar {
  height: 38px;
  padding-top: 8px;
  margin-bottom: 5px;
  background-color: #fff;
  border-bottom: 1px solid #E1E1E1;
  box-sizing: border-box;
}

  .btn {
    float: left;
    margin-left: 15px;
    font-size: 14px;
    text-align: center;
  }

  .tab-active {
    font-weight: 900;
    font-size: 16px;
    border-bottom: 2px #0e932e solid;
    padding-bottom: 4px;
  }

.add{
  float: right;
  width:22px;
  height: 22px;
  margin-right: 10px;
}
  .add image{
    height: 22px;
    width: 22px;
  }

/* swiper sign-in */
  .sign-in{
    text-align: center;
  } 
    .sign-img{
      margin-top: 200px;
      height: 72px;
      width: 72px;
    }
    .sign-in text{
      font-size: 14px;
    }
    .sign-btn{
      background-color: #BBBBBB;
      color: #fff; 
      margin-top: 10px;
      width: 100px;
      height: 36px;
      border-radius: 6px;
      font-size: 14px;
    }
    .btnActive{
      background-color: #8CAE85;
    }


/* swiper preview */

swiper{
  height: 100vh;
  background-color: #fff;
}


/* swiper courseware */
.course-ware{
  /* background-color: #fff; */
  height: 100vh;
}
  .c-w-card{
    width: 50%;
    padding: 15px 0;
    float: left;
    height: 140px;
    position: relative;
    text-align: center;
  }
    .card-img{
      width: 80%;
      height: 110px;
    } 
    .card-img-collect{
      height: 20px;
      width: 20px;
      position: absolute;
      top: 15px;
      right: 25px;
    }
    .card-img-count{
      position: absolute;
      right: 20px;
      bottom: 23px;
      font-size: 14px;  
    }
    .card-text{
      text-align: center;
      font-size: 14px;
      margin-top: 15px;
    }

/* swiper sticky-post 置顶帖*/

  .sticky-post{
    height: 40px;
    font-size: 14px;
    line-height: 40px;
    border-bottom: 1px solid #EAEAEA;

  }
    .sticky{
      color: rgb(0, 80, 151);
      float: left;
      padding: 0 10px;
    }
    .sticky-content{
      overflow: hidden;
      float: left;
    }

    .blank{
      height: 3px;
      background-color: #F9F9F9;
    }

  /* 帖子 */
  .post-card{
    position: relative;
  }
    .extra{
      position: absolute;
      top: 0px;
      right: 0px;
      width: 30px;
      height: 30px;
      z-index: 0;
    }
    .extraDetail{
      position: absolute;
      height: 100px;
      width: 80px;
      top: 35px;
      right: 15px;
      font-size: 14px;
      line-height: 33px;
      background-color: #fff;
      box-shadow: 1px 1px 1px 0px rgb(224, 224, 224);
      border:  1px solid rgb(224, 224, 224);
      border-radius: 3px;
      text-align: center;
      z-index: 1;
    }
      .ex-de-line{
        border-bottom: 1px solid  rgb(224, 224, 224);
      }

    .userInfo{
      height: 62px;
      font-size: 14px;
    }
      .img-box{
        float: left;
        height: 45px;
        width: 45px;
        margin: 10px 12px 0px 12px;
        border: 1px solid #E1E1E1;
        border-radius: 50px;
      }
        .user-img{
          width: 45px;
          height: 45px;
          border-radius: 50px;
        }
      .user-name{
        padding-top: 10px;
      }
      .user-time{
        padding-top: 1px;
      }
    .post-content{
      font-size: 14px;
      width: 90%;
      margin: 0 auto;
      word-break:break-all;
    }
    .post-reply{
      margin-top: 5px;
    }
      .reply-img-box{
        margin: 2px 10px 0 20px;
        float: left;
      }
        .reply-img{
          height: 20px;
          width: 20px;
        }
      .reply-info{
        font-size: 12px;
        line-height: 20px;
      }
        .reply-name{
          margin-bottom: 5px;
          color: rgb(0, 80, 151);
        }
      .blank2{
        height: 5px;
      }
  .addPost{
    position: fixed;
    bottom: 70px;
    right: 20px;
    height: 50px;
    width: 50px;
    border-radius: 25px;
  }
    .addPost-img{
      height: 50px;
      width: 50px;
    }

  /*loading*/
  .loading-font{
    font-size: 30rpx;
  }

/* 公告和作业集 */

  .ann-card{
    height: 90px;
    border-bottom: 2px solid #F9F9F9;
    position: relative;
  }
    .ann-card-head{
      font-size: 16px;
      color: #101010;
      padding: 15px 0 0 17px;
      font-weight: 900;
    }
    .ann-card-content{
      max-width: 90%;
      font-size: 14px;
      color: #101010;
      padding: 9px 0 0 17px;
    }
    .ann-card-read{
      position: absolute;
      font-size: 12px;
      color: #868585;
      top: 15px;
      right: 10px;
    }
    .ann-card-time{
      position: absolute;
      font-size: 12px;
      color: #868585;
      bottom: 5px;
      right: 10px;
    }